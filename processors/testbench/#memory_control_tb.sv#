  begin
  nRST = 0;

  @(posedge CLK);
  @(posedge CLK);
  nRST = 1;
  ccif.iREN = 0;
  ccif.dWEN = 0;
  ccif.dREN = 0;
  ccif.iaddr = 0;
  ccif.daddr = 0;
  ccif.dstore = 0;

  @(posedge CLK);
  @(posedge CLK);
/*
